{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "g++.exe - Build and debug active file",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}\\bin\\debug\\zjvl.exe",
			"args": [
				"-O3", // optimization 
				"-s", // strip all debugging symbols
				"-DNDEBUG",
				"${workspaceFolder}\\src\\*.cpp",
				"${workspaceFolder}\\src\\app\\*.cpp",
				"-o",
				"${workspaceFolder}\\bin\\debug\\zjvl.exe",
				"-I",
				"${workspaceFolder}\\lib",
				"-I",
				"${workspaceFolder}\\src",
				"-I",
				"${workspaceFolder}\\dependencies\\sdl64\\include",
				"-L",
				"${workspaceFolder}\\dependencies\\sdl64\\lib",
				"-lmingw32",
				"-lSDL2main",
				"-lSDL2",
				"-lSDL2_image"
			],
			"stopAtEntry": false,
			"cwd": "${fileDirname}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"miDebuggerPath": "C:\\Program Files\\mingw-w64\\x86_64-8.1.0-posix-seh-rt_v6-rev0\\mingw64\\bin\\gdb.exe",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"preLaunchTask": "C/C++: g++.exe build active debug file"
		}
	]
}